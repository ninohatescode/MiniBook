<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <link href="~\Content\bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body style="background-color: #F0FFF0">
    <div>
        <div class="bs_header " style="width:100%">
            <nav class="navigation">
                <ul class="nav nav-pills">
                    <li>
                    </li>
                    @if (Session["Admin"] != null)
                    {
                        <li class="nav-link dropdown ">
                            <span class="nav-link dropdown-toggle link-dark " data-bs-toggle="dropdown">@Session["AdminName"]</span>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="~/Admin/Logout">Đăng xuất</a></li>
                            </ul>
                        </li>

                    }
                </ul>
            </nav>
        </div>
        <div style="padding:5px 0 0 0 ; width:20%; float:left ; font-size:28px">
            <div class="container mt-3 text-white">
                <div class="list-group mb-3">
                    <div class="list-group-item list-group-item-secondary"><a class="nav-link" href="~/Category/Index">Danh mục sách</a></div>
                    <div class="list-group-item list-group-item-secondary"><a class="nav-link" href="~/Publisher/Index">Nhà xuất bản</a></div>
                    <div class="list-group-item list-group-item-secondary"><a class="nav-link" href="~/Author/Index">Tác giả</a></div>
                    <div class="list-group-item list-group-item-secondary"><a class="nav-link" href="~/Book/Index">Sách</a></div>
                    <div class="list-group-item list-group-item-secondary"><a class="nav-link" href="~/Customer/Index">Tài khoản</a></div>
                    <div class="list-group-item list-group-item-secondary"><a class="nav-link" href="~/DONHANGs/Index">Đơn hàng</a></div>
                    <div class="list-group-item list-group-item-secondary"><a class="nav-link" href="~/Users/Logout">Thống kê</a></div>
                </div>
            </div>
        </div>
        <div style=" width:80%;float:right" class="bs_content">
            @RenderBody()
        </div>
    </div>
   
</body>
</html>
